    <script>
        // Quiz Configuration
        const QUIZ_CONFIG = {
            link: "https://www.rayvila.com/g.php/251230113640",
            endDate: new Date('January 1, 2026 23:59:59').getTime(),
            totalQuestions: 20,
            correctMark: 1,
            wrongPenalty: 0.25
        };

        // Application State
        let isCountdownActive = true;

        // DOM Elements
        const navbar = document.querySelector('.navbar');
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        const scrollProgress = document.getElementById('scroll-progress');
        const notification = document.getElementById('notification');
        const countdownTimer = document.getElementById('countdown-timer');
        const startQuizBtn = document.getElementById('start-quiz-btn');
        const startQuizBtn2 = document.getElementById('start-quiz-btn-2');
        const startQuizBtn3 = document.getElementById('start-quiz-btn-3');
        const startQuizModal = document.getElementById('start-quiz-modal');
        const cancelQuizBtn = document.getElementById('cancel-quiz-btn');
        const confirmStartBtn = document.getElementById('confirm-start-btn');

        // Initialize Application
        function initApp() {
            setupEventListeners();
            startCountdown();
            showWelcomeNotification();
            animateOnScroll();
        }

        // Setup Event Listeners
        function setupEventListeners() {
            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                // Navbar scroll effect
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }

                // Scroll progress
                const windowHeight = document.documentElement.scrollHeight - window.innerHeight;
                const scrolled = (window.scrollY / windowHeight) * 100;
                scrollProgress.style.width = scrolled + '%';

                // Animate elements on scroll
                animateOnScroll();
            });

            // Mobile menu toggle
            hamburger.addEventListener('click', function() {
                hamburger.classList.toggle('active');
                navLinks.classList.toggle('active');
            });

            // Close mobile menu when clicking on a link
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.addEventListener('click', function() {
                    hamburger.classList.remove('active');
                    navLinks.classList.remove('active');
                });
            });

            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Start quiz buttons
            [startQuizBtn, startQuizBtn2, startQuizBtn3].forEach(btn => {
                btn.addEventListener('click', showStartModal);
            });

            // Modal buttons
            cancelQuizBtn.addEventListener('click', hideStartModal);
            confirmStartBtn.addEventListener('click', startQuiz);

            // Close modal on outside click
            startQuizModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    hideStartModal();
                }
            });

            // Escape key to close modal
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && startQuizModal.style.display === 'flex') {
                    hideStartModal();
                }
                
                // Ctrl/Cmd + Enter to start quiz
                if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                    e.preventDefault();
                    showStartModal();
                }
            });
        }

        // Countdown Timer
        function startCountdown() {
            function updateCountdown() {
                if (!isCountdownActive) return;

                const now = new Date().getTime();
                const distance = QUIZ_CONFIG.endDate - now;

                if (distance < 0) {
                    isCountdownActive = false;
                    countdownTimer.innerHTML = `
                        <div class="countdown-unit" style="background: var(--gradient-secondary);">
                            <span>00</span>
                            <span class="label">DAYS</span>
                        </div>
                        <div class="countdown-unit" style="background: var(--gradient-secondary);">
                            <span>00</span>
                            <span class="label">HOURS</span>
                        </div>
                        <div class="countdown-unit" style="background: var(--gradient-secondary);">
                            <span>00</span>
                            <span class="label">MINUTES</span>
                        </div>
                        <div class="countdown-unit" style="background: var(--gradient-secondary);">
                            <span>00</span>
                            <span class="label">SECONDS</span>
                        </div>
                    `;
                    document.querySelector('.quiz-status').innerHTML = `
                        <i class="fas fa-times-circle"></i>
                        <span>Challenge Has Ended</span>
                    `;
                    
                    // Disable quiz buttons
                    [startQuizBtn, startQuizBtn2, startQuizBtn3].forEach(btn => {
                        btn.disabled = true;
                        btn.innerHTML = '<i class="fas fa-times-circle"></i><span>Challenge Ended</span>';
                        btn.style.opacity = '0.6';
                        btn.style.cursor = 'not-allowed';
                    });
                    
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');

                // Add animation when time is running low
                if (days === 0) {
                    countdownTimer.classList.add('pulse');
                }
            }

            updateCountdown();
            const countdownInterval = setInterval(updateCountdown, 1000);
        }

        // Modal Functions
        function showStartModal() {
            startQuizModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        function hideStartModal() {
            startQuizModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Start Quiz Function
        function startQuiz() {
            hideStartModal();
            
            // Show loading notification
            showNotification('Redirecting to Quiz...', 'Opening quiz platform in new tab');
            
            // Add a slight delay for better UX
            setTimeout(() => {
                // Open quiz in new tab
                window.open(QUIZ_CONFIG.link, '_blank', 'noopener,noreferrer');
                
                // Show success notification
                setTimeout(() => {
                    showNotification('Quiz Tab Opened!', 'Check your browser tabs to start the quiz');
                }, 500);
                
                // Track quiz start (you can add analytics here)
                console.log('Quiz started at:', new Date().toISOString());
                
                // Optional: Set a cookie to track user has started quiz
                document.cookie = "quiz_started=true; path=/; max-age=86400"; // 24 hours
                
            }, 800);
        }

        // Notification System
        function showWelcomeNotification() {
            setTimeout(() => {
                showNotification('Welcome to 2026 Quiz!', 'Read instructions carefully before starting.');
            }, 1500);
        }

        function showNotification(title, message) {
            notification.querySelector('strong').textContent = title;
            notification.querySelector('p').textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }

        // Scroll Animation
        function animateOnScroll() {
            const elements = document.querySelectorAll('.animate-in');
            
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        }

        // Initialize all animations
        document.querySelectorAll('.animate-in').forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(30px)';
            element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        });

        // Add heartbeat effect to main CTA button
        function addHeartbeatEffect() {
            const mainCta = document.getElementById('start-quiz-btn');
            if (!mainCta) return;
            
            setInterval(() => {
                mainCta.style.boxShadow = '0 0 30px rgba(0, 191, 255, 0.6)';
                setTimeout(() => {
                    mainCta.style.boxShadow = '0 8px 25px rgba(0, 191, 255, 0.3)';
                }, 800);
            }, 3000);
        }

        // Initialize when page loads
        window.addEventListener('DOMContentLoaded', function() {
            initApp();
            addHeartbeatEffect();
            
            // Check if user has cookie for returning visitors
            const hasVisited = document.cookie.includes('quiz_visited=true');
            if (!hasVisited) {
                document.cookie = "quiz_visited=true; path=/; max-age=2592000"; // 30 days
            }
        });

        // Handle page visibility change
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                // Page became visible, you could refresh countdown if needed
                console.log('Page visible - quiz ready');
            }
        });

        // Performance optimization
        let resizeTimer;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(function() {
                animateOnScroll();
            }, 250);
        });
    </script>
</body>
</html>